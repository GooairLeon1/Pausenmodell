<Page x:Class="Pausenmodellneu.LoginScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pausenmodellneu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginScreen" Height="450" Width="800" FontSize="14" >

    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="40">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Matrikelnummer" Foreground="White"/>
            <TextBox x:Name="txtMatrikelnummer" Background="#545d6a" Foreground="White" FontSize="20"/>
            <Label Content="Passwort" Foreground="White"/>
            <PasswordBox x:Name="txtPasswort" Background="#545d6a" Foreground="White" FontSize="20"/>
            <Button x:Name="Login" Content="Login" Click="Login_Click" Margin="100 40" Background="#545d6a" Foreground="White" FontSize="18"/>
        </StackPanel>
    </Border>
</Page>
