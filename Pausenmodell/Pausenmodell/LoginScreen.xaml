<Window x:Class="Pausenmodell.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pausenmodell"
        mc:Ignorable="d"
        Title="LoginScreen" Height="320" Width="300" FontSize="14" Background="Yellow">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Matrikelnummer" Foreground="White"/>
            <TextBox x:Name="txtMatrikelnummer" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Label Content="Passwort" Foreground="White"/>
            <PasswordBox x:Name="txtPasswort" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Button Name="Login" Content="Login" Click="Login_Click" Margin="60 10" Background="#545d6a" Foreground="White" FontSize="18"/>
        </StackPanel>
    </Border>
</Window>
